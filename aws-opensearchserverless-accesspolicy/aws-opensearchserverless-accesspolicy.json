{
    "typeName": "AWS::OpenSearchServerless::AccessPolicy",
    "description": "Amazon OpenSearchServerless access policy resource",
    "definitions": {
        "AccessPolicyType": {
            "type": "string",
            "description": "The possible types for the access policy",
            "enum": [
                "data"
            ]
        }
    },
    "properties": {
        "Name": {
            "type": "string",
            "maxLength": 32,
            "minLength": 3,
            "pattern": "^[a-z][a-z0-9-]+$",
            "description": "The name of the policy"
        },
        "Type": {
            "$ref": "#/definitions/AccessPolicyType"
        },
        "Version": {
            "type": "string",
            "maxLength": 36,
            "minLength": 20,
            "pattern": "^([0-9a-zA-Z+/]{4})*(([0-9a-zA-Z+/]{2}==)|([0-9a-zA-Z+/]{3}=))?$",
            "description": "The version of the policy"
        },
        "Description": {
            "type": "string",
            "maxLength": 1000,
            "minLength": 1,
            "description": "The description of the policy"
        },
        "Policy": {
            "type": "string",
            "maxLength": 20480,
            "minLength": 1,
            "pattern": "[\t\n\r -~¡-ÿ]+",
            "description": "The JSON policy document that you want to use as the content for the new policy"
        }
    },
    "readOnlyProperties": [
        "/properties/Version"
    ],
    "createOnlyProperties": [
        "/properties/Name",
        "/properties/Type"
    ],
    "primaryIdentifier": [
        "/properties/Name",
        "/properties/Type"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "aoss:CreateAccessPolicy"
            ]
        },
        "read": {
            "permissions": [
                "aoss:GetAccessPolicy"
            ]
        },
        "update": {
            "permissions": [
                "aoss:UpdateAccessPolicy"
            ]
        },
        "delete": {
            "permissions": [
                "aoss:DeleteAccessPolicy"
            ]
        },
        "list": {
            "permissions": [
                "aoss:ListAccessPolicies"
            ]
        }
    },
    "additionalProperties": false
}
